# UnEmpower Frontend Environment Variables
# Copy this file to .env.local and fill in values after deploying contracts

# API URL
NEXT_PUBLIC_API_URL=http://localhost:8000

# Chain ID (31337 for local hardhat, 11155111 for Sepolia)
NEXT_PUBLIC_CHAIN_ID=31337

# Contract Addresses (from packages/contracts/deployments.json after deploy)
NEXT_PUBLIC_CONTRACT_WORKER_REGISTRY=
NEXT_PUBLIC_CONTRACT_WORKPROOF=
NEXT_PUBLIC_CONTRACT_ATTESTATION_VERIFIER=
NEXT_PUBLIC_CONTRACT_LOAN_VAULT=
NEXT_PUBLIC_CONTRACT_MOCK_USDC=

# Demo mode - enables admin simulate button
NEXT_PUBLIC_DEMO_ADMIN=true
